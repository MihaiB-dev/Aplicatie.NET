@model List<Team>

<h2>Team Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td>
                    <a asp-action="Show" asp-route-id="@team.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@team.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@team.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="New">Create New</a>
