@{
}

@model List<Project>

<h2>Projects</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Title_project</td>
                <td>@project.Description</td>
                <td>
                    <a asp-action="Show" asp-route-id="@project.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@project.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@project.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
