@{
}

@model App.NET.Models.Project

<h2 class="text-center">Editare Proiect</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            @using (Html.BeginForm("Edit", "Projects", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.Id)

                @Html.LabelFor(model => model.Title_project)
                @Html.TextBoxFor(model => model.Title_project, new { @class = "form-control" })

                @Html.LabelFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })

                @Html.LabelFor(model => model.Team_id)
                @Html.DropDownListFor(model => model.Team_id, new SelectList(ViewBag.Teams, "Id", "Name", Model.Team_id), "Selectați echipa", new { @class = "form-control" })

                <button type="submit" class="btn btn-success mt-3">Modifică Proiect</button>
            }
        </div>
    </div>
</div>



